<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>UNCC Car Meets | ITIS 4166 | Login</title>

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Merriweather+Sans:ital,wght@0,300..800;1,300..800&family=Saira:ital,wght@0,100..900;1,100..900&family=Urbanist:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet" />

  <link rel="stylesheet" href="/styles/default.css" />
</head>

<body>
  <div class="page-container">
    <div class="content-wrapper">
      
      <!-- Navigation -->
      <%- include('../partials/nav') %>

      <main>

        <% if (error && error.length > 0) { %>
          <div class="alert alert-danger"><%= error %></div>
        <% } %>

        <% if (success && success.length > 0) { %>
          <div class="alert alert-success"><%= success %></div>
        <% } %>


        <div class="login-container">
          <h1>Welcome Back!</h1>
          <p class="login-subtitle">Log in to access car meets, post events, and connect with other enthusiasts.</p>

        <form action="/login" method="POST" class="login-form">
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="norm@charlotte.edu" required />
          </div>

          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" placeholder="••••••••" required />
          </div>

          <button type="submit">Login</button>

          <div class="login-extra">
            <p>Don't have an account? <a href="/signup">Sign up here</a></p>
          </div>
        </form>
        </div>
      </main>


      <!-- Footer -->
      <%- include('../partials/footer') %>

    </div>
  </div>
  <script>
    setTimeout(() => {
      const alerts = document.querySelectorAll('.alert');
      alerts.forEach(alert => {
        alert.style.opacity = '0';
        setTimeout(() => alert.remove(), 500); 
      });
    }, 4000);
  </script>

</body>
</html>
